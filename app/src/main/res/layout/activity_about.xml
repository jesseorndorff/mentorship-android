<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.activities.AboutActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:contentDescription="@string/logo"
                app:srcCompat="@drawable/splash_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/generic_28sp"
                android:layout_marginTop="@dimen/generic_28sp"
                android:layout_marginRight="@dimen/generic_28sp"
                android:text="@string/about_systers"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/generic_28sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/generic_28sp"
                android:text="@string/about_systers_sec"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/generic_28sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/generic_28sp"
                android:text="@string/about_systers_three"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="343dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"

                android:columnCount="2"
                android:padding="14dp"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnGit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:visibility="gone"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:outlineAmbientShadowColor="#55111109"
                    android:outlineSpotShadowColor="#55111109"
                    app:cardBackgroundColor="@color/toolbar_color"
                    app:cardCornerRadius="20dp"
                    tools:targetApi="p">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="114dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            app:srcCompat="@drawable/ic_github" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="@string/our_github_link"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="20dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    android:outlineAmbientShadowColor="#55111109"
                    android:outlineSpotShadowColor="#55111109"
                    app:cardBackgroundColor="@color/toolbar_color"
                    app:cardCornerRadius="20dp"
                    tools:targetApi="p">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="114dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:padding="8dp"
                            app:srcCompat="@drawable/ic_zulip" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/systers_open_source_zulip"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:visibility="gone"
                    android:focusable="true"
                    android:outlineAmbientShadowColor="#55111109"
                    android:outlineSpotShadowColor="#55111109"
                    app:cardBackgroundColor="@color/toolbar_color"
                    app:cardCornerRadius="20dp"
                    tools:targetApi="p">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="114dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            app:srcCompat="@drawable/ic_web" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/our_website"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnTermsCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:outlineAmbientShadowColor="#55111109"
                    android:outlineSpotShadowColor="#55111109"
                    app:cardBackgroundColor="@color/toolbar_color"
                    app:cardCornerRadius="20dp"
                    tools:targetApi="p">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="114dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            app:srcCompat="@drawable/ic_terms_and_condition" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/terms_and_conditions"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnprivacypolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:visibility="gone"
                    android:focusable="true"
                    android:outlineAmbientShadowColor="#55111109"
                    android:outlineSpotShadowColor="#55111109"
                    app:cardBackgroundColor="@color/toolbar_color"
                    app:cardCornerRadius="20dp"
                    tools:targetApi="p">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="114dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            app:srcCompat="@drawable/ic_privacy" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/privacy_policy"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btncodeofconduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:outlineAmbientShadowColor="#55111109"
                    android:outlineSpotShadowColor="#55111109"
                    app:cardBackgroundColor="@color/toolbar_color"
                    app:cardCornerRadius="20dp"
                    tools:targetApi="p">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="114dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            app:srcCompat="@drawable/ic_code_of_conduct" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/code_of_conduct"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>