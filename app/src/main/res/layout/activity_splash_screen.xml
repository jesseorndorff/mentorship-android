<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="org.systers.mentorship.view.activities.SplashScreenActivity">

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dim20dp"
        android:layout_marginEnd="@dimen/dim50dp"
        android:contentDescription="@string/logo"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_logo_updated_colors" />

    <LinearLayout
        android:id="@+id/llUperLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_below="@+id/ivlogo"
        android:padding="@dimen/dim20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim10dp"
            android:gravity="center"
            android:text="Learn and grow with a professional \n mentor"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>
</RelativeLayout>
